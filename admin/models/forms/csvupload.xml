<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_csvuploads/models/rules"
    addfieldpath="/administrator/components/com_csvuploads/models/fields"
>
    <fieldset
        name="main"
        class="adminform"
        label_new="COM_CSVUPLOADS_MAIN_LEGEND_NEW"
        label_edit="COM_CSVUPLOADS_MAIN_LEGEND_EDIT"
        label="COM_CSVUPLOADS_MAIN_LEGEND"
    >
        <field
            name="name"
            type="text"
            label="COM_CSVUPLOADS_NAME_LABEL"
            description="COM_CSVUPLOADS_NAME_DESC"
            size="40"
            class="inputbox"
            default=""
            required="true"
        />
        <field
            name="file"
            type="upload"
            label="COM_CSVUPLOADS_FILE_LABEL"
            description="COM_CSVUPLOADS_FILE_DESC"
            hiddenclass="hidden"
            currentclass="smallText"
            nofile="COM_EXTRAS_FILEFOLDER_FILE_LABEL_NOFILE"
            accept="text/csv, application/vnd.ms-excel"
            required="true"
        />
        <field
                name="catid"
                type="filteredcategories"
                extension="com_content"
                class="inputbox"
                default=""
                label="COM_CSVUPLOADS_CATID_LABEL"
                description="COM_CSVUPLOADS_CATID_LABEL_DESC"
                required="true"
            >
                <option value="">COM_CSVUPLOADS_CATID_OPTION</option>
        </field>
        <field
            name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            class="inputbox"
            size="1"
        />
        <field
            name="contact_user_id"
            type="staff"
            label="COM_CSVUPLOADS_CONTACT_LABEL"
            description="COM_CSVUPLOADS_CONTACT_DESC"
            default="COM_CSVUPLOADS_CONTACT_DEFAULT"
            filter="int"
            class="inputbox"
            required="true"
        >
            <option value="">COM_CSVUPLOADS_CONTACT_DEFAULT</option>
        </field>
        <field
            name="id"
            type="text"
            class="readonly"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            size="10"
            default="0"
            readonly="true"
        />
        <field
            name="description"
            type="textarea"
            class="inputbox"
            rows="5"
            cols="30"
            label="COM_CSVUPLOADS_DESCRIPTION_LABEL"
            description="COM_CATEGORIES_DESCRIPTION_DESC"
        />
    </fieldset>

    <fields name="options">
        <fieldset
            name="options"
            label="COM_CSVUPLOADS_FIELDSET_OPTIONS_LEGEND"
            class="adminform"
        >
            <field
                name="namedkeys"
                type="radio"
                label="COM_CSVUPLOADS_NAMED_KEYS_LABEL"
                description="COM_CSVUPLOADS_NAMED_KEYS_DESC"
                class="btn-group"
                default="0"
            >
                <option value="0">COM_CSVUPLOADS_NAMED_KEYS_0_LABEL</option>
                <option value="1">COM_CSVUPLOADS_NAMED_KEYS__1_LABEL</option>
            </field>
            <field
                name="processor"
                type="radio"
                label="COM_CSVUPLOADS_PROCESSOR_LABEL"
                description="COM_CSVUPLOADS_PROCESSOR_DESC"
                class="btn-group"
                default="none"
            >
                <option value="none">COM_CSVUPLOADS_PROCESSOR_OPTION_NONE</option>
                <option value="json">COM_CSVUPLOADS_PROCESSOR_OPTION_JSON</option>
            </field>
            <field
                name="json_format"
                type="textarea"
                class="inputbox monospace"
                rows="5"
                cols="30"
                label="COM_CSVUPLOADS_JSON_FORMAT_LABEL"
                description="COM_CSVUPLOADS_JSON_FORMAT_DESC"
            />
        </fieldset>

    </fields>

</form>